extends layout

block content
  h1= title
  p Welcome to our test

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
        h2 User Info
        p
          strong Name:
          |  <span id='userInfoName'></span>
          br
          strong University:
          |  <span id='userInfoUniversity'></span>
          br
          strong Grade:
          |  <span id='userInfoGrade'></span>
          br
          strong Part:
          |  <span id='userInfoPart'></span>
          br
          strong Music:
          |  <span id='userInfoMusic'></span>
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th Name
          th LINE ID
          th Delete?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Name')
        input#inputUserId(type='text', placeholder='LINE ID')
        br
        input#inputUserUniversity(type='text', placeholder='University')
        input#inputUserGrade(type='text', placeholder='Grade')
        br
        input#inputUserPart(type='text', placeholder='Part')
        input#inputUserMusic(type='text', placeholder='Music')
        br
        button#btnAddUser Add User
    // /ADD USER

  // /WRAPPER
